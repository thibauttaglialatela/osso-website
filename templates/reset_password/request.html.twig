{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-light text-center">Réinitialisez votre mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse email et nous vous enverrons un lien pour mettre à jour votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyez l'e-mail de réinitialisation de mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
