{% extends './admin/base.html.twig' %}

{% block title %}{{ parent() }} - Liste des compositeurs{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des compositeurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compositor in compositors %}
            <tr>
                <td>{{ compositor.id }}</td>
                <td>{{ compositor.name }}</td>
                <td>
                    <a href="{{ path('app_compositor_crud_show', {'id': compositor.id}) }}">Montrer</a>
                    <a href="{{ path('app_compositor_crud_edit', {'id': compositor.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_compositor_crud_new') }}">Rajouter un compositeur</a>
{% endblock %}
