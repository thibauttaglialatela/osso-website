{% extends '/admin/base.html.twig' %}

{% block title %}Instrument index{% endblock %}

{% block body %}
    <h1>Instrument index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instrument in instruments %}
            <tr>
                <td>{{ instrument.id }}</td>
                <td>{{ instrument.name }}</td>
                <td>
                    <a href="{{ path('app_instrument_crud_show', {'id': instrument.id}) }}">Montrer</a>
                    <a href="{{ path('app_instrument_crud_edit', {'id': instrument.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_instrument_crud_new') }}">Ajouter un instrument</a>
{% endblock %}
