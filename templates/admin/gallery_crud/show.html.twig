{% extends 'admin/base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ gallery.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ gallery.date ? gallery.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ gallery.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gallery_crud_index') }}">back to list</a>

    <a href="{{ path('app_gallery_crud_edit', {'id': gallery.id}) }}">edit</a>

    {{ include('admin/gallery_crud/_delete_form.html.twig') }}
{% endblock %}
