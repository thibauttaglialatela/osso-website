{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} - Contenu{% endblock %}

{% block body %}
    <h1>Contenu</h1>

    <table class="table table-striped" id="datatables-index">
        <thead>
            <tr>
                <th>Image</th>
                <th>Texte alternatif</th>
                <th>Identifiant</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contenu in contenus %}
            <tr>
                <td>{{ contenu.poster }}</td>
                <td>{{ contenu.alt }}</td>
                <td>{{ contenu.identifier }}</td>
                <td>{{ contenu.title }}</td>
                <td>
                    <a href="{{ path('app_contenu_crud_show', {'id': contenu.id}) }}">Montrer</a>
                    <a href="{{ path('app_contenu_crud_edit', {'id': contenu.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_contenu_crud_new') }}">Créer du contenu</a>
{% endblock %}
