{% extends '../../base.html.twig' %}

{% block title %}Musician index{% endblock %}

{% block body %}
    <h1>Musician index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for musician in musicians %}
            <tr>
                <td>{{ musician.id }}</td>
                <td>{{ musician.lastname }}</td>
                <td>{{ musician.firstname }}</td>
                <td>{{ musician.status }}</td>
                <td>
                    <a href="{{ path('app_musician_crud_show', {'id': musician.id}) }}">show</a>
                    <a href="{{ path('app_musician_crud_edit', {'id': musician.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_musician_crud_new') }}">Create new</a>
{% endblock %}
