{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Formulaire de connection{% endblock %}

{% block body %}
    {% if error %}
        <div><h4 class="text-light mt-5">{{ error.messageKey|trans(error.messageData, 'security') }}</h4></div>
    {% endif %}
   <div class="container-fluid">
       <div class="row">
           <div class="col-12 col-sm-5 mx-auto mt-5">
               <form action="{{ path('app_login') }}" method="post">
                   <h1 class="h3 mb-3 fw-normal text-light">Veuillez vous connecter</h1>

                   <div class="form-floating">
                       <input type="email" class="form-control" id="username" placeholder="name@example.com" name="_username" value="{{ last_username }}">
                       <label class="text-dark" for="username">Adresse e-mail</label>
                   </div>
                   <div class="form-floating">
                       <input type="password" class="form-control" id="password" placeholder="Password" name="_password">
                       <label class="text-dark" for="password">Mot de passe</label>
                   </div>

                   <div class="checkbox mb-3">
                       <label>
                           <input type="checkbox" value="remember-me"> Se souvenir de moi
                       </label>
                   </div>
{#                   TODO: modifier la ligne ci-dessous aprés création de l'interface admin#}
                   {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

                   <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
               </form>
           </div>
       </div>
   </div>
{% endblock %}
