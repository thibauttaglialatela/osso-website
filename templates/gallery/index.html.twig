{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - galeries photo{% endblock %}

{% block body %}
    <h1 class="text-light text-center fs-1 fw-bold my-lg-4 text-uppercase mt-3">photos des concerts</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-10 mx-auto">
                <ul>
                    {% if galleries is empty %}
                        <h2 class="text-light text-center">Aucune galerie de photos pour le moment. Revenez plus tard</h2>
                    {% endif %}
                    {% for gallery in galleries %}
                        <a href="{{ path('gallery_show', {'gallerySlug': gallery.slug}) }}"><h2 class="text-light text-center">{{ gallery.title }}</h2></a>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
<div class="row">
    <div class="col-12 d-flex flex-row justify-content-center">
        <a href="{{ path('press_index') }}" class="btn btn-success mt-lg-5">Retour</a>
    </div>
</div>


{% endblock %}
