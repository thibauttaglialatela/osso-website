{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
{{ dump(posters) }}
    <h1 class="text-center text-light">{{ posters[0].gallery.title }}</h1>
    <div class="container-fluid">
        <div class="row" id="gallery">
            {% for poster in posters %}
                <div class="col-12 col-sm-6 col-lg-3">
                    <img class="w-100 img-fluid" src="{{ poster.image }}" alt="{{ poster.alt }}">
                </div>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('gallery_index') }}" class="btn btn-info">Retour</a>

{% endblock %}