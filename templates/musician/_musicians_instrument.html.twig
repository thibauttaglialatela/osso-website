<div class="modal fade" id="exampleModal_{{ instrument.id }}" tabindex="-1" aria-labelledby="instrumentModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="instrumentModalLabel">{{ instrument.name }}</h5>
            </div>
            <div class="modal-body">
                {% for musician in instrument.musicians %}
                    <li>{{ musician }}</li>
                {% endfor %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>